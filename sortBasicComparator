***a dung truoc b, return a<b;
***a dung sau b, return a>b;
#include <bits/stdc++.h>

using namespace std;
bool cmp(int a, int b)
{
    return a>b;
    //or if (a>b)
    return true;
    return false;
    
}
int main()
{
    int a[] = {4, 3, 5 ,1,2,4};
    int n = sizeof(a) / sizeof(a[0]);
    sort(a, a+n, cmp);
    for(int x:a)
    cout<<x<<" ";
}
